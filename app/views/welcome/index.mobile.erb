<div class="toolbar">
  <h1 id="pageTitle">CTR Open Data Demo</h1>
  <%= link_to "", "#", :id => "backButton", :class => "button" %>
</div>

<div id="Welcome" class="panel" selected="true" title="Welcome">
  <ul>
    <li class="ctr-logo">
      <%=image_tag "ctr_logo.jpg", :alt => "CTR Open Data Beta"%>
    </li>
    <li>
      <%=link_to "View undisbursed loans", "#MapContainer"%>
    </li>
  </ul>
  <h2>Note -- the data in the app is provisional and often inaccurate. It does 
  not represent actual World Bank data. Please do not reuse it.  For questions, 
  please contact <%= mail_to "smoscoso@worldbank.org"%></h2>
</div>

<div id="MapContainer" title="Map">
  <div id="map">
  </div>
  
  <div id="Navigation">
    <fieldset>
      <div class="option" selected="true">Undisbursed %</div>
      <div class="option">Disbursed %</div>
      <div class="option">Undisbursed $</div>
    </fieldset>
  </div>
</div>

<form id="Track" class="dialog" action="">
    <fieldset>
        <h1>Sorry, this feature is not available yet</h1>
        <%=link_to "Ok", "", :type => "cancel", :class => "grayButton"%>
    </fieldset>
</form>

<form id="Report" class="dialog" action="">
    <fieldset>
        <h1>Sorry, this feature is not available yet</h1>
        <%=link_to "Ok", "", :type => "cancel", :class => "grayButton"%>
    </fieldset>
</form>
